{% extends 'base.html.twig' %}

{% block body %}
    <h1>Welcome to the Books Manager</h1>
    <h2>Here are your currently borrowed books:</h2>
    <table class="ui green table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Location</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.location }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
