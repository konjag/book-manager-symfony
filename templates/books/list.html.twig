{% extends 'base.html.twig' %}

{% block body %}
    <table class="ui green table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Location</th>
                <th>Current reader</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.author }}</td>
                    <td>{{ book.location }}</td>
                    <td>{{ book.currentReader }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
