{% extends 'base.html.twig' %}

{% block body %}
    <table class="ui green table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Location</th>
                <th>Current reader</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.author }}</td>
                    <td>{{ book.location }}</td>
                    <td>
                        {% if book.isBorrowed %}
                            {{ book.currentReader.username }}
                        {% else %}
                            <a href="{{ path('app_books_borrow', { 'id': book.id }) }}" class="ui green button">Borrow</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
